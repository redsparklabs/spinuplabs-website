<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, :class => 'span3' %>
  </div>
  <div class="field">
    <%= f.label :slug %><br />
    <%= f.text_field :slug, :class => 'span3' %>
  </div>
  <div class="field">
    <div class="input-append date" id="postdate" data-date="2013-02-01" data-date-format="yyyy-mm-dd">
      <%= f.label :post_date %><br />
      <%= f.text_field :post_date, :class => 'span3', :size => 16, :readonly => '' %>
      <span class="add-on"><i class="icon-calendar"></i></span>
    </div>
  </div>
  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author, :class => 'span3' %>
  </div>
  <div class="field">
    <%= f.label :intro %><br />
    <%= f.text_area :intro, :class => 'span6', :rows => 5 %>
  </div>    
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, :class => 'span6', :rows => 20 %>
  </div>
  <div class="field">
    <%= f.label :meta_title %><br />
    <%= f.text_field :meta_title, :class => 'span3' %>
  </div>
  <div class="field">
    <%= f.label :meta_description %><br />
    <%= f.text_area :meta_description, :class => 'span6', :rows => 5 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
