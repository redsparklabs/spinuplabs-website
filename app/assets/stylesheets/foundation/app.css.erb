}

body .header {
	height: 180px;
}

body.home .header {
	height: 150px;
}

.feature {
	height: 260px;
}

.services {
	height: 270px;
	padding-top: 50px;
}

.panel {
	background-color: #f3eeea;
	border: solid 1px #dddad5;
}

.home .panel {
	display: none;
}

pre {
	padding: 10px;
	background: #555555;
