/* -----------------------------------------
   Shared Styles
----------------------------------------- */
body {
	background-image: url('<%= image_path "spinup_interior_background.jpg" %>');
	background-repeat: repeat-x;
}

body.home {
	background-image: url('<%= image_path "spinup_background.jpg" %>');
	background-repeat: repeat-x;
}

body .header {
	height: 180px;
}

body.home .header {
	height: 150px;
}

.feature {
	height: 260px;
}

.services {
	height: 270px;
	padding-top: 50px;
}

.panel {
	background-color: #f3eeea;
	border: solid 1px #dddad5;
}

.home .panel {
	display: none;
}

pre {
	padding: 10px;
	background: #555555;
	border: solid 1px #333333;
}

code {
	background: none;
	color: #FFFFFF;
	white-space: pre-wrap;
}

pre {
    font-family: "Courier 10 Pitch", Courier, monospace;
    font-size: 95%;
    line-height: 140%;
    white-space: pre;
    white-space: pre-wrap;
    white-space: -moz-pre-wrap;
    white-space: -o-pre-wrap;
}

code {
    font-family: Monaco, Consolas, "Andale Mono", "DejaVu Sans Mono", monospace;
    font-size: 95%;
    line-height: 140%;
    white-space: pre;
    white-space: pre-wrap;
    white-space: -moz-pre-wrap;
    white-space: -o-pre-wrap;
}


